<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".displayEquipmentSell.view.EquimentSellBottonSheetFrgment">

    <TextView
        android:id="@+id/price_range_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-medium"
        android:padding="12dp"
        android:text="Price Range"
        android:textColor="#E97000"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/range_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:stepSize="5"
        android:value="20"
        android:valueFrom="0"
        android:valueTo="1000"
        app:haloColor="#E97000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/price_range_txt"
        app:thumbColor="@color/orange"
        app:trackColorActive="#FF7B00"
        app:trackColorInactive="#FFCA97"
        app:values="@array/sliderValues" />

    <View
        android:id="@+id/first_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#D3D3D3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/range_slider" />

    <TextView
        android:id="@+id/category_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:padding="12dp"
        android:text="Type"
        android:textColor="#E97000"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/first_view" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.66"
        app:layout_constraintTop_toBottomOf="@id/category_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TableLayout
            android:id="@+id/table"
            android:stretchColumns="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow>
                <TextView
                    android:id="@+id/one_text"
                    android:layout_column="1"
                    android:padding="12dp"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif"
                    android:textColor="#00477A"
                    android:text="coldplaners"/>

                <CheckBox
                    android:id="@+id/one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:buttonTint="@color/orange" />
            </TableRow>
            <View
                android:layout_height="1dp"
                android:background="#D3D3D3" />
            <TableRow>
                <TextView
                    android:id="@+id/two_text"
                    android:layout_column="1"
                    android:padding="12dp"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif"
                    android:textColor="#00477A"
                    android:text="compactors"/>

                <CheckBox
                    android:id="@+id/two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:buttonTint="@color/orange" />
            </TableRow>
            <View
                android:layout_height="1dp"
                android:background="#D3D3D3" />
            <TableRow>
                <TextView
                    android:id="@+id/three_text"
                    android:layout_column="1"
                    android:padding="12dp"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif"
                    android:textColor="#00477A"
                    android:text="excavators"/>

                <CheckBox
                    android:id="@+id/three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:buttonTint="@color/orange" />
            </TableRow>
            <View
                android:layout_height="1dp"
                android:background="#D3D3D3" />
            <TableRow>
                <TextView
                    android:id="@+id/four_text"
                    android:layout_column="1"
                    android:padding="12dp"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif"
                    android:textColor="#00477A"
                    android:text="dozers"/>

                <CheckBox
                    android:id="@+id/four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:buttonTint="@color/orange" />
            </TableRow>
            <View
                android:layout_height="1dp"
                android:background="#D3D3D3" />
            <TableRow>
                <TextView
                    android:id="@+id/five_text"
                    android:layout_column="1"
                    android:padding="12dp"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif"
                    android:textColor="#00477A"
                    android:text="Other"/>

                <CheckBox
                    android:id="@+id/five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:buttonTint="@color/orange" />
            </TableRow>
            <View
                android:layout_height="1dp"
                android:background="#D3D3D3" />

            <!-- <View
                 android:layout_height="1dp"
                 android:background="#D3D3D3" />-->

        </TableLayout>
    </androidx.core.widget.NestedScrollView>
    <View
        android:id="@+id/button_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#D3D3D3"
        app:layout_constraintBottom_toTopOf="@id/apply_button"
        app:layout_constraintTop_toBottomOf="@id/scroll"
        />


    <Button
        android:id="@+id/apply_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/orange"
        android:text="Apply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.9">


    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>
